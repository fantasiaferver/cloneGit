<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageItemData"
        android:layout_width="295dp"
        android:layout_height="274dp"
        app:srcCompat="@drawable/xedap1"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/tvNameData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xe đạp màu vàng"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="314dp" />

    <TextView
        android:id="@+id/tvContentData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xe đạp chạy bằng cơm"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/tvPriceData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.000.000VND"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="621dp" />

</androidx.constraintlayout.widget.ConstraintLayout>